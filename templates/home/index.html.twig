{% extends 'header.html.twig' %}
{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("css/home_style.css") }}">
{% endblock %}
{% block body %}
{{ parent() }}
	{% if session.get('isConnected') %}
	<div class="last_game_added">
		<p class="text"> Derniers jeux ajout√©s</p>
		<div class="all_games">

			{% for game in lastGames %}
				<a href="{{ path('app_one_game', {platform: game['platform'], id: game['id']}) }}"><img src="{{ game['image_url'] }}" class="{{ getClass(game['platform']) }}" /></a>
			{% endfor %}

		</div>
	</div>
		{% else %}
		<p class="text">Veuillez vous connecter pour voir vos jeux</p>
	{% endif %}
{% endblock %}